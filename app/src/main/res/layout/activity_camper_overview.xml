<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/current_store_people"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tent_select_fragment">

        <FrameLayout
            android:id="@+id/placeholder_container1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <fragment
                android:id="@+id/placeholder1"
                android:name="com.example.lckvappjudanten.AddCamperFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/add_camper_view" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/placeholder_container2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/placeholder2"
                android:name="com.example.lckvappjudanten.AddCamperFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/add_camper_view" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/placeholder_container3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/placeholder3"
                android:name="com.example.lckvappjudanten.AddCamperFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/add_camper_view" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/placeholde_container4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/placeholder4"
                android:name="com.example.lckvappjudanten.AddCamperFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/add_camper_view" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/placeholder_container5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/placeholder5"
                android:name="com.example.lckvappjudanten.AddCamperFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/add_camper_view" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/placeholder_container6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <fragment
                android:id="@+id/placeholder6"
                android:name="com.example.lckvappjudanten.AddCamperFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/add_camper_view" />
        </FrameLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/tent_select_fragment"
        android:name="com.example.lckvappjudanten.TentSelectFragment"
        android:layout_width="412dp"
        android:layout_height="149dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/tent_select_view" />

    <fragment
        android:id="@+id/footer_fragment"
        android:name="com.example.lckvappjudanten.FooterFragment"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/footer_view" />
</androidx.constraintlayout.widget.ConstraintLayout>